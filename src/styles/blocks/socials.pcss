.socials {
  display: flex;
  align-items: center;

}

.social__item{
  margin-right: 35px;
  &:last-child {
    margin-right: 0;
  }
}

.socials__link {
  display: block;
  width: 28px;
  height: 22px;
}

.socials__icon{
  // width: 100%;
  height: 100%;
  fill: $icon-color;

  &:hover {
    fill: $main-accent-color;
  }
}